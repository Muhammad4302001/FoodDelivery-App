<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".OrderActivity">
    
    
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/background"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/imageProduct"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/somsa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/nameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Somsani Jillisi"
        android:textSize="30dp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/imageProduct"
        android:layout_marginTop="26dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 000"
        android:textColor="#970808"
        android:layout_below="@+id/imageProduct"
        android:layout_toRightOf="@+id/nameProduct"
        android:layout_marginTop="26dp"
        android:textSize="30dp"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/descProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bir balo batarlar bo'lib yootibdiku berda ba ish atsa bo'ladi
        berda qani ishlivarali qani shuni bilamiz somsam qaxshat atakan lakin qorin och adi yeyasim galib getdi
hozrila bir proyertam olmagan adim"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/nameProduct"
        android:layout_marginTop="16dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/subtrackProduct"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_horizontal_rule_24"
            android:background="@drawable/background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="6dp"
            android:textSize="30dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_add_24"
            android:background="@drawable/background"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>